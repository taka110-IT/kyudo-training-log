<%= turbo_frame_tag "targets_modal" do %>
  <div class="modal fade" data-controller="targets-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= "#{Time.current.year}年#{Time.current.month}月の目標を入力" %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
