<div class="container-fluid">
  <h1 class="text-center fs-4 mb-4"><%= t 'devise.passwords.new.forgot_your_password' %></h1>

  <%= form_with model: @user, url: password_path(resource_name), data: { turbo: false }, local: true, class: "row g-3 align-items-center" do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 row justify-content-center">
      <div class="field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="actions text-center my-3">
      <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "btn btn-outline-success text-wrap" %>
    </div>
  <% end %>

  <div class="text-center mb-3">
    <%= link_to t('devise.shared.links.back'), root_path, class: "btn btn-outline-primary text-wrap" %>
  </div>

  <div class="text-center my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
