<div class="container-fluid">
  <h2 class="mb-5 text-center"><%= t 'devise.confirmations.new.resend_confirmation_instructions' %></h2>

  <%= form_with model: @user, url: confirmation_path(resource_name), data: { turbo: false }, local:true, class: "row g-3 align-items-center" do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 row justify-content-center">
    <div class="field col-5 fs-5">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
    </div>
  </div>

    <div class="actions text-center my-3">
      <%= f.submit t('devise.confirmations.new.resend_confirmation_instructions'), class: "btn btn-outline-success col-4 text-wrap" %>
    </div>
  <% end %>

  <div class="text-center my-4">
    <%= link_to t('devise.shared.links.back'), root_path, class: "btn btn-outline-primary col-3 text-wrap" %>
  </div>

  <div class="text-center my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
