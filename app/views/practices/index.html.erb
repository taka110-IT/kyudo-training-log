<p style="color: green"><%= notice %></p>

<h1>弓道練習記録帳</h1>

<hr>

<%= link_to "今日の練習を記録する", new_practice_path %> |
<%= link_to "今月の目標を設定する", targets_new_path %>

<hr>

<%= turbo_frame_tag 'calendar' do %>
  <%= month_calendar(events: @practices) do |date, practices| %>
    <%= date.month %>/<%= date.day %>

    <% practices.each do |practice| %>
      <div>
        <%= practice.shooting_count %>射
      </div>
    <% end %>
  <% end %>
<% end %>

<hr>

<%= turbo_frame_tag 'practices-list' do %>
  <%= render 'tabs' %>

  <%= paginate @practices %>

  <div id="practices">
    <% @practices.each do |practice| %>
      <%= render practice %>
      <p>
        <%= link_to "詳細", practice %> |
        <%= link_to "編集", edit_practice_path(practice) %>
      </p>
      <hr>
    <% end %>
  </div>

  <%= paginate @practices %>
<% end %>
