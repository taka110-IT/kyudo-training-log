<%= turbo_frame_tag @practice do %>
  <%= render "practices_modal", title: "詳細" do %>

    <p>
      <%= @practice.important == true ? '⭐️' : '' %>
      <%= @practice.fixed == true ? '📌固定されたメモ' : '' %>
    </p>

    <p>
      <%= @practice.shooting_count.blank? ? 0 : "#{@practice.shooting_count}" %>射
    </p>

    <p>
      <%= @practice.memo.blank? ? 'メモはありません。' : @practice.memo %>
    </p>

    <div>
      <%= link_to "編集", edit_practice_path(@practice), data: { turbo_frame: "_top" } %>
    </div>
  <% end %>
<% end %>
