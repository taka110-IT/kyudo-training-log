<div id="<%= dom_id practice %>" class="my-2">
  <div class="row lh-sm">
    <p><span class="me-4"><%= l(practice.date, format: :long) %></span>
       <%= practice_shooting_count_blank?(practice) %>
       <%= practice_fixed?(practice) %>
       <%= practice_important?(practice) %>
    </p>
  </div>

  <div class="text-break">
    <%= practice_memo_blank?(practice) %>
  </div>

  <div class="text-end border-bottom border-dark border-opacity-25 py-2 px-3">
    <%= link_to t('views.common.edit'), edit_practice_path(practice), data: { turbo_frame: "_top" }, class: "btn btn-outline-success btn-sm" %>
  </div>
</div>
