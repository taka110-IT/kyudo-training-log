<div id="<%= dom_id practice %>" class="lh-lg my-2">
  <div class="row">
    <span class="col-4 fs-5"><%= l(practice.date, format: :long) %></span>
    <span class="col-2 fs-5"><%= practice_shooting_count_blank?(practice) %></span>
    <span class="col-2 fs-4"><%= practice_fixed?(practice) %> <%= practice_important?(practice) %></span>
    <span class="col-1 ms-auto text-nowrap"><%= link_to t('views.common.edit'), edit_practice_path(practice), data: { turbo_frame: "_top" } %></span>
  </div>

  <div class="fs-6 border-bottom border-dark border-opacity-25 pb-2 px-3 text-break">
    <%= practice_memo_blank?(practice) %>
  </div>
</div>
