<div id="<%= dom_id practice %>">
  <p>
    <%= practice.important == true ? '⭐️' : '' %>
    <%= practice.fixed == true ? '📌固定されたメモ' : '' %>
  </p>

  <p>
    <%= practice.date %> | <%= practice.shooting_count %>射
  </p>

  <p>
    <%= practice.memo.blank? ? 'メモはありません。' : practice.memo %>
  </p>

</div>
