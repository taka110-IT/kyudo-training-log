<%= form_with(model: practice) do |form| %>
  <% if practice.errors.any? %>
    <div style="color: red">
      <h2><%= t 'errors.template.body' %></h2>

      <ul>
        <% practice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :shooting_count, style: "display: block" %>
    <%= form.number_field :shooting_count, min: 0  %>
  </div>

  <div>
    <%= form.label :memo, style: "display: block" %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= form.label t('views.form.fixed'), style: "display: block" %>
    <%= form.check_box :fixed %>
  </div>

  <div>
    <%= form.label t('views.form.important'), style: "display: block" %>
    <%= form.check_box :important %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit %>
  </div>
<% end %>
