<div class="container-fluid">
  <%= form_with(model: practice, class: "align-items-center") do |form| %>
    <% if practice.errors.any? %>
      <div class="text-danger">
        <div><%= t 'errors.template.body' %></div>

        <ul>
          <% practice.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-3 row justify-content-center">
      <div class="field">
        <%= form.label :date, style: "display: block", class: "form-label" %>
      </div>
      <div class="field col-8">
        <%= form.date_field :date, class: "form-control text-center", placeholder: '2023/1/1' %>
      </div>
    </div>

    <div class="mt-3 row justify-content-center">
      <div class="field">
        <%= form.label :shooting_count, style: "display: block", class: "form-label" %>
      </div>
      <div class="field col-7">
        <%= form.number_field :shooting_count, min: 0, max: 500, class: "form-control text-center", placeholder: 10 %>
      </div>
      <div class="field col-auto pt-2">
        <%= t'views.common.shots' %>
      </div>
    </div>

    <div class="mt-3 row justify-content-center">
      <div class="field">
        <%= form.label :memo, style: "display: block", class: "form_label" %>
        <%= form.text_area :memo, class: "form-control memo_textarea", placeholder: t('activerecord.attributes.practice.memo') %>
      </div>
    </div>

    <div class="my-4 row justify-content-center ps-4">
      <div class="form-check">
        <%= form.check_box :fixed, class: "form-check-input" %>
        <%= form.label :fixed, style: "display: block", class: "form-check-label text-nowrap" %>
      </div>
    </div>
    <div class="my-4 row justify-content-center ps-4">
      <div class="form-check">
        <%= form.check_box :important, class: "form-check-input" %>
        <%= form.label :important, style: "display: block", class: "form-check-label text-nowrap" %>
      </div>
    </div>

    <div class="text-center my-3">
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit class: "btn btn-success btn-lg text-wrap col-8" %>
    </div>
  <% end %>
</div>
