<div class="simple-calendar">
  <div>
    <span class="calendar-title">
      <%= start_date.year %><%= t 'datetime.prompts.year' %>
      <%= t('date.month_names')[start_date.month] %>
    </span>

    <p>
      <%= t 'views.index.result' %>
      <%= t('views.index.shooting_counts', count: @result) %>Ôºè
      <%= t 'views.index.target' %>
      <%= @target_data.blank? ?
            t('views.index.shooting_counts', count: 0)
            : t('views.index.shooting_counts', count: @target_data.first[:total]) %>
    </p>

    <p><% if @target_data.blank? %>
        <%= t 'views.index.no_target' %>
      <% elsif @remaining_shots <= 0 %>
        <%= t 'views.achievement.title' %>
      <% else %>
        <%= t('views.index.remaining_shots', count: @remaining_shots ) %>
      <% end %>
    </p>

    <%= turbo_frame_tag 'achievement_message' do %>
      <% if !@target_data.blank? && (@remaining_shots <= 0) && (@target_data.first[:achievement] == false) %>
        <div>
          <%= render partial: 'practices/achievement_message', data: { turbo_frame: "achievement_message_modal" } %>
        </div>
      <% end %>
    <% end %>

    <hr>
  </div>
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= start_date.year %><%= t 'datetime.prompts.year' %><%= t('date.month_names')[start_date.month] %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
